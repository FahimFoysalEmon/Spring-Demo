<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="triangle" class="com.example.springdemo.Triangle">

        <!--set the value to that 'type' property of that class-->
        <!--<property name="type" value="Equilateral" />-->

<!--        <constructor-arg value="Equilateral" />-->
<!--        <constructor-arg value="and this is perfect shape" />-->

        <property name="pointA" ref="point1" ></property>
        <property name="pointB" ref="point2" ></property>
        <property name="pointC" ref="point3" ></property>
    </bean>


    <bean id="point1" class="com.example.springdemo.Point">
        <property name="x" value="0"></property>
        <property name="y" value="0"></property>
    </bean>

    <bean id="point2" class="com.example.springdemo.Point">
        <property name="x" value="-20"></property>
        <property name="y" value="0"></property>
    </bean>

    <bean id="point3" class="com.example.springdemo.Point">
        <property name="x" value="20"></property>
        <property name="y" value="0"></property>
    </bean>



</beans>